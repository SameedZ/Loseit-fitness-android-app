<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RegGender">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Step 1/3"
            android:fontFamily="@font/roboto_bold"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:text="What's your gender?"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:onClick="male"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@drawable/forget">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/mars" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/profile"
                android:fontFamily="@font/roboto_bold"
                android:text="male"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/malecheck"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/check"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:onClick="female"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@drawable/forget">

            <ImageView
                android:id="@+id/prfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="female"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/femenine" />

            <TextView
                android:id="@+id/usrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:onClick="female"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/prfile"
                android:fontFamily="@font/roboto_bold"
                android:text="female"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/femalecheck"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/check"
                android:visibility="invisible"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/tochoice"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="next"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="30dp"/>



</LinearLayout>